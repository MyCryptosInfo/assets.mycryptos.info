{
  "name": "mycryptos-assets",
  "version": "0.0.0",
  "private": true,
  "main": "src/index.js",
  "description": "MyCryptos Â· Assets",
  "scripts": {
    "build": "run-p build:*",
    "build:css": "run-p build:css:*",
    "build:css:auth": "sass --load-path=node_modules sass/auth.scss | postcss --use autoprefixer --output=public/css/auth.css",
    "lint-staged": "lint-staged",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "*.{js,json,md,scss}": "prettier --write",
    "*.{png,svg}": "imagemin-lint-staged",
    "*.scss": "stylelint --syntax=scss"
  },
  "dependencies": {
    "autoprefixer": "^10.2.4",
    "bulma": "^0.9.2",
    "mycryptos-locations": "github:MyCryptosInfo/locations",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.7",
    "postcss-cli": "^8.3.1",
    "sass": "^1.32.8"
  },
  "devDependencies": {
    "imagemin-lint-staged": "^0.4.0",
    "lint-staged": "^10.5.4",
    "pre-commit": "^1.2.2",
    "prettier": "^2.2.1",
    "stylelint": "^13.3.3",
    "stylelint-config-sass-guidelines": "^7.1.0",
    "stylelint-config-standard": "^20.0.0"
  },
  "pre-commit": [
    "lint-staged"
  ],
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-sass-guidelines"
    ],
    "rules": {
      "max-nesting-depth": null
    }
  }
}
